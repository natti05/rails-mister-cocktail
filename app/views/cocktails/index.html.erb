<div class="banner">
  <div class="container_banner">
    <h1>Cocktails universe</h1>
    <p>You are the bartender, <br> Create the most amazing drink ever.</p>
  </div>
</div>
<div class="container-cards">
  <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.attached? %>
          <div class="card-category"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 400, width: 400, crop: :scale %>')" >
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>
        <% end %>
      <% end %>
  </div>
</div>




