<div class="cards-show">
  <div class="card_form">
    <h2><%= @cocktail.name %></h2>
    <a><%= cl_image_tag @cocktail.photo.key, height: 500, width: 500, crop: :limit %></a>
  </div>
  <div>
      <h1>Add an ingredient</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.button :submit, class: "button"%>
      <% end %>
      <h2 class="mt-3">Recipe</h2>
    <% @cocktail.doses.each do |dose| %>
      <div class="card_info d-flex bd-highlight">
        <p class=" bd-highlight"><%= dose.ingredient.name %></p>
        <p class=" bd-highlight"><%= dose.description %></p>
        <%= link_to dose_path(dose), class: "card_links ml-auto bd-highlight", method: :delete, data: { confirm: "Are you sure?"} do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <% end %>
    </div>

</div>




